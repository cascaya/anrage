#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

PKG=anrage

BASE=debian/$(PKG)
DOCS=$(BASE)/usr/share/doc/$(PKG)

build/$(PKG)::
	$(MAKE) -C src DESTDIR=$$(pwd) 

install/$(PKG)::
	rsync -rlpt * --exclude=debian --exclude=setup --exclude=src --exclude=README --exclude=.gitignore $(BASE)

binary-predeb/$(PKG)::
	rm $(BASE)/DEBIAN/conffiles || true
